{
	"name": "hendricks-bot",
	"description": "",
	"version": "1.0.0",
	"license": "Apache-2.0 license",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"start": "ts-node-dev -r tsconfig-paths/register src/index.ts",
		"lint": "prettier --write . && eslint . --fix --ext .ts",
		"commands:deploy": "ts-node ./src/deploy-commands.ts",
		"docker:build": "docker build -t hendricks_image .",
		"docker:up": "docker-compose up -d",
		"docker:down": "docker-compose down",
		"plugins:link": "symlink-dir plugins ./node_modules/@plugins",
		"plugins:install": "pnpm --filter \"./plugins/**\" install --prod",
		"plugins:build": "pnpm --filter \"./plugins/**\" run --if-present build"
	},
	"dependencies": {
		"@discordjs/opus": "^0.8.0",
		"@discordjs/voice": "^0.11.0",
		"@types/eventsource": "^1.1.9",
		"axios": "^0.27.2",
		"discord.js": "^14.5.0",
		"dotenv": "^16.0.2",
		"eventsource": "^2.0.2",
		"libsodium-wrappers": "^0.7.10",
		"mkdirp": "^1.0.4",
		"symlink-dir": "^5.0.1",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.1.0",
		"typed-emitter": "^2.1.0",
		"typescript": "^4.8.4",
		"winston": "^3.8.2",
		"ts-node-dev": "^2.0.0"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.40.0",
		"@typescript-eslint/parser": "^5.40.0",
		"eslint": "^8.25.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-import-resolver-typescript": "^3.5.1",
		"eslint-plugin-import": "^2.26.0",
		"prettier": "^2.7.1"
	}
}